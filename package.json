{
	"name": "hjrbda-site",
	"private": true,
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		],
		"catalog": {
			"dotenv": "^17.2.2",
			"zod": "^4.1.13",
			"typescript": "^5",
			"better-auth": "^1.4.9"
		}
	},
	"type": "module",
	"scripts": {
		"dev": "turbo dev",
		"build": "turbo build",
		"check-types": "turbo check-types",
		"dev:web": "turbo -F @hjrbda-site/web dev",
		"db:push": "turbo -F @hjrbda-site/db db:push",
		"db:studio": "turbo -F @hjrbda-site/db db:studio",
		"db:generate": "turbo -F @hjrbda-site/db db:generate",
		"db:migrate": "turbo -F @hjrbda-site/db db:migrate",
		"db:start": "turbo -F @hjrbda-site/db db:start",
		"db:watch": "turbo -F @hjrbda-site/db db:watch",
		"db:stop": "turbo -F @hjrbda-site/db db:stop",
		"db:down": "turbo -F @hjrbda-site/db db:down",
		"check": "biome check --write ."
	},
	"dependencies": {},
	"devDependencies": {
		"@biomejs/biome": "^2.2.0",
		"@hjrbda-site/config": "workspace:*",
		"@types/node": "^22.13.14",
		"turbo": "^2.6.3",
		"typescript": "catalog:"
	},
	"packageManager": "bun@1.2.19"
}
